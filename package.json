{
  "name": "ng-linting",
  "version": "0.0.0",
  "scripts": {
    "prepare": "is-ci || husky install && npm run create-commit-hook",
    "create-commit-hook": "add .husky/pre-commit \"npm run pre-commit\"",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint1": "eslint . --ext .ts",
    "stylelint1": "stylelint '**/*.scss'",
    "lint:fix": "eslint . --ext .ts --fix",
    "stylelint:fix": "stylelint '**/*.scss' --fix",
    "stylelint": "stylelint  '**/*.scss' --fix",
    "lint": "eslint . --ext .ts,.html --fix",
    "pre-commit": "ng build && lint-staged",
    "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
    "commit-msg": "commitlint --edit '$1'",
    "commit": "git-cz",
    "pre-push": "ng build"
  },
  "private": true,
  "dependencies": {
    "@angular-eslint/builder": "^13.0.1",
    "@angular/animations": "~13.1.0",
    "@angular/cdk": "^13.1.0",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/flex-layout": "^13.0.0-beta.36",
    "@angular/forms": "~13.1.0",
    "@angular/material": "^13.1.0",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "eslint-config-airbnb": "^19.0.4",
    "rxjs": "~7.4.0",
    "sass-loader": "^12.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.3",
    "@angular-eslint/builder": "^13.0.1",
    "@angular-eslint/eslint-plugin": "^13.0.1",
    "@angular-eslint/eslint-plugin-template": "^13.0.1",
    "@angular-eslint/schematics": "^13.0.1",
    "@angular-eslint/template-parser": "^13.0.1",
    "@angular/cdk": "13.1.0",
    "@angular/cli": "~13.1.3",
    "@angular/compiler-cli": "~13.1.0",
    "@angular/material": "13.1.0",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-angular": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@compodoc/compodoc": "^1.1.18",
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.0.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/eslint-plugin-tslint": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "commitizen": "^3.0.0",
    "commitlint": "^16.1.0",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.7.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "is-ci": "^3.0.1",
    "jasmine-core": "~3.10.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "prettier": "2.5.1",
    "prettier-eslint": "^8.2.2",
    "stylelint": "^14.3.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "lint-staged": "^12.3.3",
    "typescript": "~4.5.2"
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix",
      "git add"
    ],
    "*component.html": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{ts,html}": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "minHeaderWidth": 10,
      "maxHeaderWidth": 100,
      "jiraPrefix": "CP"
    }
  }
}
